<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Galaxy Pizza"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Pizza Type Label -->
    <TextView
        android:id="@+id/PizzaTypeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Pizza Type:"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/Title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Pizza Images -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:src="@drawable/hawaiian"
        app:layout_constraintTop_toBottomOf="@id/PizzaTypeLabel"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Pizza Type Radio Buttons -->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:layout_marginEnd="32dp"
        android:src="@drawable/hamandchesse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageView" />

    <RadioButton
        android:id="@+id/Hawaiian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hawaiian"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintStart_toStartOf="@id/imageView" />

    <RadioButton
        android:id="@+id/HamAndCheese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ham and Cheese"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/imageView2"
        app:layout_constraintStart_toStartOf="@id/imageView2" />

    <!-- Size Label -->
    <TextView
        android:id="@+id/SizeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Size:"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/Hawaiian"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Size Radio Buttons -->
    <RadioButton
        android:id="@+id/Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Small"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/SizeLabel"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioButton
        android:id="@+id/Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="@id/Small"
        app:layout_constraintStart_toEndOf="@id/Small"
        android:layout_marginStart="16dp" />

    <RadioButton
        android:id="@+id/Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Large"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="@id/Medium"
        app:layout_constraintStart_toEndOf="@id/Medium"
        android:layout_marginStart="16dp" />

    <!-- Crust Label -->
    <TextView
        android:id="@+id/CrustLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Crust Type:"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/Small"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Crust Radio Buttons -->
    <RadioButton
        android:id="@+id/Thin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thin"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/CrustLabel"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioButton
        android:id="@+id/Thick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thick"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="@id/Thin"
        app:layout_constraintStart_toEndOf="@id/Thin"
        android:layout_marginStart="16dp" />

    <!-- Toppings Label -->
    <TextView
        android:id="@+id/ToppingsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Extra Toppings:"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/Thin"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- CheckBoxes -->
    <CheckBox
        android:id="@+id/Onion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Onions (₱10.00)"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/ToppingsLabel"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/Tomato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tomatoes (₱10.00)"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="@id/Onion"
        app:layout_constraintStart_toEndOf="@id/Onion"
        android:layout_marginStart="16dp" />

    <CheckBox
        android:id="@+id/Mushroom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mushrooms (₱20.00)"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/Onion"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/ExtraCheese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Extra Cheese (₱20.00)"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="@id/Mushroom"
        app:layout_constraintStart_toEndOf="@id/Mushroom"
        android:layout_marginStart="16dp" />

    <CheckBox
        android:id="@+id/Pineapple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pineapple (₱15.00)"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/Mushroom"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- PWD/Senior Option -->
    <RadioButton
        android:id="@+id/radioButtonPwdSenior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PWD / SENIOR"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/Pineapple"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Action Buttons -->
    <Button
        android:id="@+id/Process"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="PROCESS ORDER"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/radioButtonPwdSenior"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/NewOrder"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/NewOrder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="NEW ORDER"
        app:layout_constraintTop_toTopOf="@id/Process"
        app:layout_constraintStart_toEndOf="@id/Process"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

    <!-- Summary -->
    <TextView
        android:id="@+id/Summary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/Process"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
